%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: '/sign_in', method: 'post' do |f|
        %header
          %h1 Sign in
        %fieldset
          .row
            .col-sm-4
              = f.email_field :email, label:  "Email Address"
          .row
            .col-sm-4
              = f.password_field :password
        = f.submit("Sign in")
      = link_to "Forgot password?", forgot_password_path    