%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@invitation, class: "invite") do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .row
            .col-lg-4
              = f.text_field :recipient_name, label: "Friend's Name"
          .row
            .col-lg-4
              = f.email_field :recipient_email, label: "Friend's Email Address"
          .row
            .col-sm-6
              = f.text_area :message, label: "Invitation Message", rows: 6, placeholder: "Please join this really cool site!"
              = f.submit "Send Invitation"
