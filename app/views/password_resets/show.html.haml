%section.reset_password.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: password_resets_path do |f|
        %header
          %h1 Reset Your Password
        .row
          .col-xs-4
            = f.password_field :password, label: "New Password"
        = hidden_field_tag :token, @token
        = f.submit("Sign in")